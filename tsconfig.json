{
  "extends": "expo/tsconfig.base.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@root/*": ["./*"],
      "@src/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@screens/*": ["src/components/screens/*"],
      "@services/*": ["src/services/*"],
      "@context/*": ["src/context/*"],
      "@models/*": ["src/components/types/*"],
      "@constants/*": ["constants/*"],
      "@assets/*": ["assets/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "files.exclude": {
    "node_modules": true
  },
  "typescript.validate.enable": false
}
